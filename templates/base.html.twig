    <nav>
        <ul class="nav">
            <li class="nav-item">
                <a href="{{ path('home_index') }}" class="nav-link">Accueil</a>
            </li>
            <li class="nav-item">
                <a href="{{ path('webpack_index') }}" class="nav-link">Webpack</a>
            </li>
            <li class="nav-item">
                <a href="{{ path('cache_index') }}" class="nav-link">Cache</a>
            </li>
            <li class="nav-item">
                <a href="{{ path('form_index') }}" class="nav-link">Formulaire</a>
            </li>
        </ul>
